<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:orientation = "vertical"
              android:layout_width = "wrap_content"
              android:layout_height = "wrap_content">
	<RelativeLayout
		android:id="@+id/leftSideRelativeLayout"
		android:layout_margin="8dp"
		android:layout_width = "wrap_content"
	    android:visibility="visible"
		android:layout_height = "wrap_content">

		<TextView
			android:id="@+id/message1TextView"
			android:textSize="18sp"
			android:text="Hello!"
			android:layout_width = "wrap_content"
		    android:layout_height = "wrap_content"

		/>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/rightSideRelativeLayout"
		android:layout_width = "wrap_content"
		android:visibility="visible"
		android:layout_height = "wrap_content" android:layout_marginRight = "12dp"
		android:layout_marginEnd = "12dp"
		android:layout_alignBaseline = "@+id/leftSideRelativeLayout"
		android:layout_alignBottom = "@+id/leftSideRelativeLayout"
		android:layout_alignParentRight = "true" android:layout_alignParentEnd = "true">

		<TextView
			android:id="@+id/message2TextView"
			android:textSize="18sp"
			android:text="Axaxaxax!"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"

		/>
	</RelativeLayout>


</RelativeLayout>
